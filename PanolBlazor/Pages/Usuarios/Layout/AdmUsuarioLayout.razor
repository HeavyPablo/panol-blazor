@inherits LayoutComponentBase
@inject NavigationManager Navigation
@layout MainLayout

<div class="col-12 py-4">
    <div class="row justify-content-between bg-dark rounded-lg navbar">
        <div class="btn-group" role="group">
            <button type="button" class="btn btn-secondary @Active2" @onclick="@(e => SolicitudesNavigate(SolicitudesActions.Bloqueo))">
                <span class="oi oi-share-boxed" aria-hidden="true"></span> Bloqueo de Usuario
            </button>
            <button type="button" class="btn btn-secondary @Active3" @onclick="@(e => SolicitudesNavigate(SolicitudesActions.Editar))">
                <span class="oi oi-clock" aria-hidden="true"></span> Editar y agregar usuario
            </button>
            <button type="button" class="btn btn-secondary @Active4" @onclick="@(e => SolicitudesNavigate(SolicitudesActions.CargaMasivaUsuarios))">
                <span class="oi oi-task" aria-hidden="true"></span> Agregar en carga Masiva
            </button>
        </div>
        <div class="btn-group" role="group">
          
        </div>
    </div>
</div>

<div class="col-12">
    @Body
</div>

@code {

    private string Active1, Active2, Active3, Active4 = "";

    protected override void OnInitialized()
    {
        RefreshActive();
    }

    public void SolicitudesNavigate(SolicitudesActions action)
    {
        Navigation.NavigateTo("usuarios/" + action.ToString());
        RefreshActive();
    }

    private void RefreshActive()
    {
        Active1 = Active2 = Active3 = Active4 = "";

        var uri = Navigation.Uri;

        //if (uri.Contains(SolicitudesActions.Agregar.ToString()))
        //{
        //    Active1 = "active";
        //}
        if (uri.Contains(SolicitudesActions.Bloqueo.ToString()))
        {
            Active2 = "active";
        }
        if (uri.Contains(SolicitudesActions.Editar.ToString()))
        {
            Active3 = "active";
        }
        if (uri.Contains(SolicitudesActions.CargaMasivaUsuarios.ToString()))
        {
            Active4 = "active";
        }
    }

    public enum SolicitudesActions
    {
        Bloqueo, Editar, CargaMasivaUsuarios,
    }
}
